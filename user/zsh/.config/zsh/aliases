alias ls="ls -FhN --color=auto --group-directories-first"
alias grep="grep --color=auto"

alias cat='bat --paging=never'

alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -vI"

function pathify {
	ln -s "$1" "$HOME/.bin/$2"
}

# need this 'cause raspis don't know what an 'alacritty' is
alias ssh="TERM=xterm ssh"
